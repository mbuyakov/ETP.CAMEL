<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                            http://camel.apache.org/schema/blueprint  http://camel.apache.org/schema/spring/camel-blueprint.xsd">

    <camelContext id="move-queue-adapter" xmlns="http://camel.apache.org/schema/blueprint">

        <route id="move1">
            <from uri="activemq:queue1?disableReplyTo=true"/>

            <onException>
                <exception>java.lang.Exception</exception>
                <handled>
                    <constant>true</constant>
                </handled>
                <log message="Exception"/>
                <setHeader headerName="Exception">
                    <simple resultType="java.lang.String">${exchangeProperty.CamelExceptionCaught}</simple>
                </setHeader>
                <to uri="activemq:queue1.bk"/>
            </onException>

            <convertBodyTo type="java.lang.String"/>
            <log message="Request: ${body}" loggingLevel="INFO"/>
            <to uri="validator:{{validator.url}}"/>
            <choice>
                <when>
                    <xpath>//author</xpath>
                    <log message="To test"/>
                    <to uri="activemq:queue.test"/>
                </when>
                <otherwise>
                    <log message="Otherwise"/>
                    <to uri="activemq:queue.default"/>
                </otherwise>
            </choice>

        </route>

        <route id="rest1">
            <from uri="jetty:{{rest.host}}"/>
            <inOnly uri="activemq:queue1"/>
            <setBody>
                <constant></constant>
            </setBody>
        </route>

        <route id="file1">
            <from uri="ftp://{{ftp.user}}@{{ftp.url}}?password={{ftp.user}}&amp;delete=true&amp;passiveMode=true&amp;throwExceptionOnConnectFailed=true&amp;binary=true"/>
            <inOnly uri="activemq:queue1"/>
        </route>

    </camelContext>

</blueprint>